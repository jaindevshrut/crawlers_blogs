        </div>
      </div>
    </header>
    <!-- End of Header -->
    
    <!-- Design Section -->
    <section class="design" id="design">
      <div class="container">
        <div class="title">
          <h2>Blogs of Woodland</h2>
          <p>Recent Wood talks on the blog</p>
        </div>
        <div class="design-content">
          <!-- Blog Item -->
          <% blogList.forEach(blog => { %>
            <div class="design-item">
                <div class="design-img">
                  <% if (blog.newImg && blog.newImg.data && blog.newImg.contentType) { %>
                    <img src="data:<%= blog.newImg.contentType %>;base64,<%= blog.newImg.data.toString('base64') %>" alt="<%= blog.newImg.filename || 'Blog Image' %>">
                  <% } else { %>
                    <img src="/path/to/default-image.jpg" alt="Default Image">
                  <% } %>
                  <span><%= blog.msg %><br>~ <%= blog.author %></span>
                </div>
                <div class="design-title">
                    <h5 style="color:white; font-weight:10"><%=blog.date%></h5>
                  <a href="#"><%= blog.title %></a>
                  <br>
                  <button onclick="toggleContent(this)" class="read-more-btn">Read More</button>
                </div>
              </div>
              
          <% }) %>
          <!-- End of Blog Item -->
          
          <!-- Add Blog Item -->
          <div class="design-item">
            <div class="add" onclick="toggleForm()">
              <div class="plus">
                <span>Add Your Blog</span>
                <i class="fa-solid fa-plus"></i>
              </div>
            </div>
          </div>
          <!-- End of Add Blog Item -->

          <!-- Popup Form -->
          <div class="popup-form" id="popupForm">
            <div class="form-content">
              <span class="close-btn" onclick="toggleForm()">&times;</span>
              <h2>Add Your Blog</h2>
              <form id="applicationForm" method="post" action="/submit" enctype="multipart/form-data">
                <label for="author">Author:</label>
                <input type="text" id="author" name="author" maxlength="25" required>

                <label for="title">Title:</label>
                <input type="text" id="title" name="title" maxlength="100" required>

                <label for="msg">Content:</label>
                <textarea id="msg" name="msg" maxlength="350" required></textarea>

                <label for="image">Upload Image:</label>
                <input type="file" name="bookPic" required>

                <button type="submit">Submit</button>
              </form>
            </div>
          </div>
          <!-- End of Popup Form -->
        </div>
      </div>
    </section>
    <!-- End of Design Section -->

    <!-- About Section -->
    <section class="about" id="about">
      <div class="container">
        <div class="about-content">
