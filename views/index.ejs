    <!-- Scripts -->
    <script>
      function toggleContent(button) {
        const spanElement = button.closest('.design-item').querySelector('.design-img span');
        
        if (spanElement.classList.contains('visible')) {
          spanElement.classList.remove('visible');
          button.textContent = 'Read More';
          setTimeout(() => {
            spanElement.style.zIndex = '-1';
          }, 500);
        } else {
          spanElement.style.zIndex = '1';
          spanElement.classList.add('visible');
          button.textContent = 'Close';
        }
      }

      function toggleForm() {
        const popupForm = document.getElementById('popupForm');
        popupForm.style.display = (popupForm.style.display === 'block') ? 'none' : 'block';
      }
    </script>
  </body>
